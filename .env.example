# Shelf Docker Configuration
# Copy this file to .env and update with your values

# ============================================
# Basic Application Settings
# ============================================
SHELF_NAME=Your Name
SHELF_TWITTER_HANDLE=@yourhandle
SITE_TITLE=My Shelf
PUBLIC_URL=http://localhost:10800
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost
FRONTEND_PORT=10800
BACKEND_PORT=10801
USER_AGENT_BASE=Shelf/3.2.7 +https://github.com/barrowclift/shelf

# ============================================
# Performance & Logging
# ============================================
LOG_LEVEL=error
REFRESH_FREQUENCY_IN_MINUTES=1
REQUEST_TIMEOUT_IN_SECONDS=5
MAX_ART_SIZE=400

# ============================================
# MongoDB Configuration
# ============================================
# Note: MONGODB_HOST is set to 'mongodb' in docker-compose.yml (container name)
MONGODB_PORT=27017
MONGODB_NAME=shelfDb
MONGODB_COLLECTION_RECORDS_NAME=recordsV2
MONGODB_COLLECTION_BOARDGAMES_NAME=boardGames
MONGODB_COLLECTION_BOOKS_NAME=books

# ============================================
# Records Integration (Discogs)
# ============================================
RECORD_SHELF_ENABLED=true
DISCOGS_USER_ID=your_discogs_username
DISCOGS_USER_TOKEN=your_discogs_api_token

# How to get Discogs credentials:
# 1. Go to https://www.discogs.com/settings/developers
# 2. Create a new application or use existing
# 3. Generate a personal access token
# 4. Your username is your Discogs profile username

# ============================================
# Board Games Integration (BoardGameGeek)
# ============================================
BOARDGAME_SHELF_ENABLED=false
BOARDGAMEGEEK_USER_ID=your_bgg_username
EXPERIMENTAL_BOARDGAME_BOX_RENDERING=false

# How to get BoardGameGeek username:
# 1. Your BGG username from your profile
# 2. No API token required (uses public API)

# ============================================
# Books Integration (Goodreads - Defunct)
# ============================================
# Note: Goodreads API is no longer available
BOOK_SHELF_ENABLED=false
