# Shelf Docker Environment Configuration
# Copy this file to .env and update with your values

# ========================================
# Basic Application Settings
# ========================================

# Your name (displayed on the About page)
SHELF_NAME=SET_ME

# Optional: Your Twitter handle (e.g., @YourHandle)
# SHELF_TWITTER_HANDLE=@YourHandle

# Display name and HTML title of your Shelf instance
SITE_TITLE=Shelf

# The public URL where your Shelf will be accessible
# For local testing: http://localhost:10800
# For production: https://yourshelfdomain.com
PUBLIC_URL=http://localhost:10800

# ========================================
# Network Configuration
# ========================================

# Frontend and backend URLs (usually no need to change)
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost

# Ports (change if these ports are already taken)
FRONTEND_PORT=10800
# BACKEND_PORT=10801 # Not used

# User agent for external API requests
USER_AGENT_BASE=Shelf/3.2.7 +https://github.com/barrowclift/shelf

# ========================================
# Performance & Logging
# ========================================

# Log level: error, warning, info, or debug
# Recommended: error for production, debug for development
LOG_LEVEL=info

# How often to refresh data from external sources (in minutes)
REFRESH_FREQUENCY_IN_MINUTES=1

# Timeout for external requests (in seconds)
REQUEST_TIMEOUT_IN_SECONDS=5

# Maximum cover art size in pixels (width or height, whichever is larger)
# Warning: Performance may suffer for larger sizes
MAX_ART_SIZE=400

# ========================================
# MongoDB Configuration
# ========================================

# MongoDB connection details
MONGODB_PORT=27017
MONGODB_NAME=shelfDb

# MongoDB collection names (usually no need to change)
MONGODB_COLLECTION_RECORDS_NAME=recordsV2
MONGODB_COLLECTION_BOARDGAMES_NAME=boardGames
MONGODB_COLLECTION_BOOKS_NAME=books

# ========================================
# Discogs Integration (Records)
# ========================================

# Enable/disable the Records shelf
RECORD_SHELF_ENABLED=true

# Your Discogs username
DISCOGS_USER_ID=SET_ME

# Discogs Personal Access Token
# Generate at: https://www.discogs.com/settings/developers
DISCOGS_USER_TOKEN=SET_ME_USING_DISCOG_API

# ========================================
# BoardGameGeek Integration
# ========================================

# Enable/disable the Games shelf
BOARDGAME_SHELF_ENABLED=false

# Your BoardGameGeek username
BOARDGAMEGEEK_USER_ID=SET_ME

# Experimental 3D box rendering (requires modern hardware/browser)
# Set to true to enable animated 3D board game boxes
EXPERIMENTAL_BOARDGAME_BOX_RENDERING=false

# ========================================
# Books (Defunct - Goodreads API discontinued)
# ========================================

# Books shelf is currently disabled until a Goodreads replacement is found
BOOK_SHELF_ENABLED=false
